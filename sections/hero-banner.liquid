{% comment %}
  Hero Banner Section
  Full-width responsive hero image with gradient overlay
{% endcomment %}

<section class="hero-banner" data-section-id="{{ section.id }}" data-section-type="hero-banner">
  {%- if section.settings.image != blank -%}
    <img 
      src="{{ section.settings.image | image_url: width: 1920 }}"
      srcset="
        {{ section.settings.image | image_url: width: 375 }} 375w,
        {{ section.settings.image | image_url: width: 750 }} 750w,
        {{ section.settings.image | image_url: width: 1100 }} 1100w,
        {{ section.settings.image | image_url: width: 1500 }} 1500w,
        {{ section.settings.image | image_url: width: 1920 }} 1920w
      "
      sizes="100vw"
      alt="{{ section.settings.image.alt | escape }}"
      loading="eager"
      width="{{ section.settings.image.width }}"
      height="{{ section.settings.image.height }}"
    >
  {%- else -%}
    <div style="background-color: #f5f5f5; width: 100%; height: 100%; display: flex; align-items: center; justify-content: center;">
      <p style="color: #999;">Add a hero image in theme settings</p>
    </div>
  {%- endif -%}
  
  {%- if section.settings.show_overlay -%}
    <div class="hero-overlay"></div>
  {%- endif -%}
</section>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero image",
      "info": "Recommended size: 1920x500px"
    },
    {
      "type": "checkbox",
      "id": "show_overlay",
      "label": "Show gradient overlay",
      "default": true
    },
    {
      "type": "range",
      "id": "height_mobile",
      "min": 200,
      "max": 600,
      "step": 50,
      "unit": "px",
      "label": "Height (mobile)",
      "default": 300
    },
    {
      "type": "range",
      "id": "height_desktop",
      "min": 300,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Height (desktop)",
      "default": 500
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}

<style>
  #shopify-section-{{ section.id }} .hero-banner {
    height: {{ section.settings.height_mobile }}px;
  }

  @media (min-width: 768px) {
    #shopify-section-{{ section.id }} .hero-banner {
      height: {{ section.settings.height_desktop }}px;
    }
  }
</style>

