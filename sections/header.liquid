{% comment %}
  Header Section
  Sticky header with mobile menu, search, account, and cart icons
{% endcomment %}

<header class="site-header" data-section-id="{{ section.id }}" data-section-type="header">
  <div class="header-inner container">
    {%- comment -%} Mobile Menu Toggle {%- endcomment -%}
    <button 
      type="button" 
      class="header-icon" 
      data-mobile-menu-toggle
      aria-label="Open menu"
      aria-controls="mobile-menu"
      aria-expanded="false"
    >
      {% render 'icon-menu' %}
    </button>

    {%- comment -%} Logo / Brand Name {%- endcomment -%}
    <div class="header-logo">
      <a href="{{ routes.root_url }}" class="header-logo-link">
        {%- if section.settings.logo != blank -%}
          <img 
            src="{{ section.settings.logo | image_url: width: 200 }}"
            alt="{{ shop.name }}"
            width="{{ section.settings.logo.width }}"
            height="{{ section.settings.logo.height }}"
            loading="lazy"
          >
        {%- else -%}
          {{ section.settings.brand_name | default: shop.name }}
        {%- endif -%}
      </a>
    </div>

    {%- comment -%} Header Icons {%- endcomment -%}
    <div class="header-icons">
      {%- if section.settings.enable_search -%}
        <button 
          type="button" 
          class="header-icon" 
          data-search-toggle
          aria-label="Search"
        >
          {% render 'icon-search' %}
        </button>
      {%- endif -%}

      {%- if shop.customer_accounts_enabled -%}
        <a 
          href="{{ routes.account_url }}" 
          class="header-icon"
          aria-label="Account"
        >
          {% render 'icon-account' %}
        </a>
      {%- endif -%}

      <a 
        href="{{ routes.cart_url }}" 
        class="header-icon" 
        data-cart-icon
        aria-label="Cart"
      >
        {% render 'icon-cart' %}
        <span class="cart-count" data-cart-count style="display: none;">{{ cart.item_count }}</span>
      </a>
    </div>
  </div>
</header>

{%- comment -%} Mobile Menu Drawer {%- endcomment -%}
<div class="mobile-menu-overlay" data-mobile-menu-overlay></div>
<nav class="mobile-menu" data-mobile-menu id="mobile-menu" aria-label="Mobile navigation">
  <div class="mobile-menu-close">
    <button 
      type="button" 
      class="header-icon" 
      data-mobile-menu-close
      aria-label="Close menu"
    >
      {% render 'icon-close' %}
    </button>
  </div>
  
  <div class="mobile-menu-nav">
    {%- for link in section.settings.menu.links -%}
      <a href="{{ link.url }}" data-mobile-menu-link>
        {{ link.title }}
      </a>
    {%- endfor -%}
  </div>
</nav>

<style>
  .cart-count {
    position: absolute;
    top: 0;
    right: 0;
    background-color: var(--color-primary);
    color: var(--color-primary-foreground);
    font-size: 0.625rem;
    padding: 0.125rem 0.375rem;
    border-radius: 9999px;
    font-weight: 600;
    min-width: 1.25rem;
    text-align: center;
  }

  .header-icon {
    position: relative;
  }
</style>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "text",
      "id": "brand_name",
      "label": "Brand name",
      "default": "Julian Prohaska",
      "info": "Used if no logo image is uploaded"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    },
    {
      "type": "checkbox",
      "id": "enable_search",
      "label": "Enable search",
      "default": true
    }
  ]
}
{% endschema %}

