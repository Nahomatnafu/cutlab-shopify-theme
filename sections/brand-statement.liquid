{% comment %}
  Brand Statement Section
  Full-width image with overlay text and call-to-action
{% endcomment %}

<section class="brand-statement" data-section-id="{{ section.id }}" data-section-type="brand-statement">
  {%- if section.settings.image != blank -%}
    <img 
      src="{{ section.settings.image | image_url: width: 1920 }}"
      srcset="
        {{ section.settings.image | image_url: width: 375 }} 375w,
        {{ section.settings.image | image_url: width: 750 }} 750w,
        {{ section.settings.image | image_url: width: 1100 }} 1100w,
        {{ section.settings.image | image_url: width: 1500 }} 1500w,
        {{ section.settings.image | image_url: width: 1920 }} 1920w
      "
      sizes="100vw"
      alt="{{ section.settings.image.alt | escape }}"
      loading="lazy"
      width="{{ section.settings.image.width }}"
      height="{{ section.settings.image.height }}"
    >
  {%- else -%}
    <div style="background-color: #f5f5f5; width: 100%; height: 100%;"></div>
  {%- endif -%}

  {%- if section.settings.show_overlay -%}
    <div class="brand-statement-overlay"></div>
  {%- endif -%}

  <div class="brand-statement-content">
    <div class="brand-statement-text">
      {%- if section.settings.heading != blank -%}
        <h2 class="brand-statement-heading" data-theme-setting="brand_statement_heading">
          {{ section.settings.heading }}
        </h2>
      {%- endif -%}
    </div>

    {%- if section.settings.button_text != blank and section.settings.button_link != blank -%}
      <a href="{{ section.settings.button_link }}" class="brand-statement-cta">
        {{ section.settings.button_text }}
        {% render 'icon-arrow-right' %}
      </a>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Brand Statement",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image",
      "info": "Recommended size: 1920x600px"
    },
    {
      "type": "checkbox",
      "id": "show_overlay",
      "label": "Show dark overlay",
      "default": true
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "Distinctive designs, crafted with precision from boutique-sourced materials"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Brand Statement"
    }
  ]
}
{% endschema %}

